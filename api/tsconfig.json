{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES6",
		"declaration": true,
		"sourceMap": true,
		"strict": true,
		"baseUrl": "src",
		"rootDir": "./src",
		"outDir": "./dist",
		"moduleResolution": "Node",
		"lib": ["dom", "dom.iterable", "esnext"],
		"paths": {
			"types/*": ["types/*"],
			"common/*": ["common/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["dist", "node_modules"]
}
